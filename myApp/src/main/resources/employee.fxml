<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane maxHeight="1080.0" maxWidth="1920.0" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.employee.EmployeeController">
   <children>
      <TabPane maxHeight="1080.0" maxWidth="1920.0" prefHeight="720.0" prefWidth="1280.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Employees">
            <content>
              <AnchorPane maxHeight="1000.0" maxWidth="1900.0" minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <HBox layoutX="201.0" prefHeight="692.0" prefWidth="1080.0">
                           <children>
                              <TableView fx:id="employeetable" editable="true" prefHeight="692.0" prefWidth="1078.0">
                                <columns>
                                  <TableColumn fx:id="idcolumn" prefWidth="91.0" text="employee_id" />
                                  <TableColumn fx:id="firstnamecolumn" minWidth="0.0" prefWidth="88.0" text="first_name" />
                                  <TableColumn fx:id="lastnamecolumn" minWidth="0.0" prefWidth="82.0" text="last_name" />
                                  <TableColumn fx:id="middlenamecolumn" prefWidth="73.0" text="middle_name" />
                                  <TableColumn fx:id="jobtitlecolumn" prefWidth="68.0" text="job_title" />
                                  <TableColumn fx:id="departmentidcolumn" prefWidth="76.0" text="department_id" />
                                  <TableColumn fx:id="manageridcolumn" prefWidth="95.0" text="manager_id" />
                                  <TableColumn fx:id="hiredatecolumn" prefWidth="92.0" text="hire_date" />
                                  <TableColumn fx:id="salarycolumn" prefWidth="97.0" text="salary" />
                                  <TableColumn fx:id="addressidcolumn" prefWidth="91.0" text="address_id" />
                                </columns>
                                 <columnResizePolicy>
                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                 </columnResizePolicy>
                              </TableView>
                           </children></HBox>
                        <VBox fx:id="layout" prefHeight="691.0" prefWidth="202.0">
                           <children>
                              <Label prefHeight="25.0" prefWidth="353.0" text="Employee Details">
                                 <padding>
                                    <Insets left="50.0" />
                                 </padding>
                              </Label>
                              <TextField fx:id="first_name" promptText="Firtst Name">
                                 <VBox.margin>
                                    <Insets bottom="5.0" left="15.0" right="15.0" />
                                 </VBox.margin>
                              </TextField>
                              <TextField fx:id="last_name" promptText="Last Name">
                                 <VBox.margin>
                                    <Insets bottom="5.0" left="15.0" right="15.0" />
                                 </VBox.margin>
                              </TextField>
                              <TextField fx:id="middle_name" promptText="Middle Name">
                                 <VBox.margin>
                                    <Insets bottom="5.0" left="15.0" right="15.0" />
                                 </VBox.margin>
                              </TextField>
                              <TextField fx:id="job_title" promptText="Job Title">
                                 <VBox.margin>
                                    <Insets bottom="5.0" left="15.0" right="15.0" />
                                 </VBox.margin>
                              </TextField>
                              <TextField fx:id="department_id" promptText="Department ID">
                                 <VBox.margin>
                                    <Insets bottom="5.0" left="15.0" right="15.0" />
                                 </VBox.margin>
                              </TextField>
                              <TextField fx:id="manager_id" promptText="Manager ID">
                                 <VBox.margin>
                                    <Insets bottom="5.0" left="15.0" right="15.0" />
                                 </VBox.margin>
                              </TextField>
                              <DatePicker fx:id="hire_date" prefHeight="25.0" prefWidth="337.0" promptText="Hire Date">
                                 <VBox.margin>
                                    <Insets bottom="5.0" left="15.0" right="15.0" />
                                 </VBox.margin>
                              </DatePicker>
                              <TextField fx:id="salary" promptText="Salary">
                                 <VBox.margin>
                                    <Insets bottom="5.0" left="15.0" right="15.0" />
                                 </VBox.margin>
                              </TextField>
                              <TextField fx:id="address_id" promptText="Address ID">
                                 <VBox.margin>
                                    <Insets bottom="5.0" left="15.0" right="15.0" />
                                 </VBox.margin>
                              </TextField>
                              <Button mnemonicParsing="false" onAction="#addEmployee" prefHeight="25.0" prefWidth="172.0" text="Add Entry">
                                 <VBox.margin>
                                    <Insets left="15.0" top="10.0" />
                                 </VBox.margin>
                              </Button>
                              <Button mnemonicParsing="false" onAction="#clearFields" prefHeight="25.0" prefWidth="172.0" text="Clear">
                                 <VBox.margin>
                                    <Insets left="15.0" />
                                 </VBox.margin>
                              </Button>
                              <Button mnemonicParsing="false" onAction="#loadEmployeeData" prefHeight="25.0" prefWidth="172.0" text="Refresh">
                                 <VBox.margin>
                                    <Insets left="15.0" />
                                 </VBox.margin>
                              </Button>
                              <Button mnemonicParsing="false" onAction="#removeEmployee" prefHeight="25.0" prefWidth="172.0" text="Delete">
                                 <VBox.margin>
                                    <Insets left="15.0" />
                                 </VBox.margin>
                              </Button>
                              <Label fx:id="status" alignment="TOP_LEFT" contentDisplay="TOP" prefHeight="45.0" prefWidth="172.0" wrapText="true">
                                 <VBox.margin>
                                    <Insets left="15.0" />
                                 </VBox.margin>
                              </Label>
                           </children>
                        </VBox>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
        </tabs>
      </TabPane>
   </children>
</AnchorPane>
